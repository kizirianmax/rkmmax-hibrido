{
  "buildCommand": "DISABLE_ESLINT_PLUGIN=true CI=false npm run build",
  "functions": { "api/**/*.js": { "maxDuration": 8 } },
  "outputDirectory": "dist",
  "env": {
    "REACT_APP_COMPANY_NAME": "RKMMAX INFINITY MATRIX/STUDY",
    "REACT_APP_CONTACT_EMAIL": "roberto@kizirianmax.site",
    "REACT_APP_DOMAIN": "kizirianmax.site",
    "DISABLE_ESLINT_PLUGIN": "true",
    "GENERATE_SOURCEMAP": "false"
  },
  "rewrites": [
    {
      "source": "/api/prices",
      "destination": "/api/admin?action=prices"
    },
    {
      "source": "/api/me-plan",
      "destination": "/api/admin?action=me-plan"
    },
    {
      "source": "/api/send-email",
      "destination": "/api/admin?action=send-email"
    },
    {
      "source": "/api/chat-stream",
      "destination": "/api/chat?mode=stream"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/manifest.json",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/manifest+json"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    },
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "installCommand": "npm install"
}
